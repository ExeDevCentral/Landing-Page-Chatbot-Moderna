# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/landing-page-chatbot

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Frontend Configuration (for CORS in production)
FRONTEND_URL=https://yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# Email Configuration (for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration (for future features)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Cache Configuration (for future features)
REDIS_URL=redis://localhost:6379

# Monitoring Configuration (for future features)
SENTRY_DSN=your-sentry-dsn-here

# n8n Configuration (for future integration)
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Analytics (for future use)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token
